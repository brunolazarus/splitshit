{
  "name": "splitshit",
  "version": "1.0.0",
  "repository": "splitshit/splitshit",
  "scripts": {
    "build": "rm -fR build && mkdir build; npm run build:all",
    "build:all": "for i in html js; do yarn \"build:${i}\"; done",
    "build:html": "cp src/index.html build/index.html",
    "build:js": "browserify src/index.js -o build/bundle.js -t babelify",
    "watch": "watchify src/index.js -o build/bundle.js -t babelify",
    "serve": "http-server build"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babelify": "^8.0.0",
    "browserify": "^14.5.0",
    "react": "^16.2.0",
    "react-dom": "^16.2.0"
  },
  "devDependencies": {
    "http-server": "^0.10.0",
    "watchify": "^3.9.0"
  }
}
